---
import Home from "../../icons/Home.astro";
import About from "../../icons/About.astro";
import Services from "../../icons/Services.astro";
import Works from "../../icons/Works.astro";
import Contact from "../../icons/Contact.astro";
import Menu from "../../icons/Menu.astro";
---
<nav class="w-full bg-white sticky top-0 z-50 p-5">
  <div class="max-w-7xl mx-auto">
    <div class="w-full h-full flex items-center justify-between">
      <img src="/logo.png" class="h-16" alt="">

      <ul class="fixed w-full md:w-auto h-dvh inset-0 bg-[#151a36]/90 text-2xl flex flex-col items-center justify-center gap-4 -translate-y-full transition-transform duration-300 target:translate-y-0 md:static md:h-[initial] md:bg-[initial] md:text-xl md:flex-row md:translate-y-[initial]">
        <a href="#home" class="flex items-center gap-1">
          <Home />
          <span>Inicio</span>
        </a>
        <a href="#about" class="flex items-center gap-1">
          <About />
          <span>Nosotros</span>
        </a>
        <a href="#services" class="flex items-center gap-1">
          <Services />
          <span>Servicios</span>
        </a>
        <a href="#works" class="flex items-center gap-1">
          <Works />
          <span>Trabajos</span>
        </a>
        <a href="#contact" class="flex items-center gap-1">
          <Contact />
          <span >Contacto</span>
        </a>
      </ul>

      <figure class="block md:hidden">
        <Menu class=""/>
      </figure>
    </div>
  </div>
</nav>