---
import Home from "../../icons/Home.astro";
import About from "../../icons/About.astro";
import Services from "../../icons/Services.astro";
import Works from "../../icons/Works.astro";
import Contact from "../../icons/Contact.astro";
import Menu from "../../icons/Menu.astro";
import Close from "../../icons/Close.astro";
---
<nav id="nav" class="w-full bg-white sticky top-0 z-50">
  <div class="max-w-7xl mx-auto">
    <div class="w-full h-full flex items-center justify-between p-5">
      <a href="#home">
        <img src="/logo.png" class="h-12" alt="">
      </a>

      <ul id="menu" class="flex flex-col justify-center translate-x-full target:translate-x-0 lg:translate-x-0 transition-all items-center gap-10 lg:gap-2 overflow-x-hidden fixed top-0 right-0 w-3/4 sm:w-1/2 md:w-1/3 lg:static lg:h-auto lg:bg-transparent lg:flex-row lg:w-auto h-dvh bg-white/20 text-black backdrop-blur-3xl">
        <a href="#home" class="flex items-center gap-1 px-4 py-1 rounded-lg hover:bg-primary-500 hover:text-white transition-colors">
          <Home />
          <span>Inicio</span>
        </a>
        <a href="#about" class="flex items-center gap-1 px-4 py-1 rounded-lg hover:bg-primary-500 hover:text-white transition-colors">
          <About />
          <span>Nosotros</span>
        </a>
        <a href="#services" class="flex items-center gap-1 px-4 py-1 rounded-lg hover:bg-primary-500 hover:text-white transition-colors">
          <Services />
          <span>Servicios</span>
        </a>
        <a href="#works" class="flex items-center gap-1 px-4 py-1 rounded-lg hover:bg-primary-500 hover:text-white transition-colors">
          <Works />
          <span>Trabajos</span>
        </a>
        <a href="#contact" class="flex items-center gap-1 px-4 py-1 rounded-lg hover:bg-primary-500 hover:text-white transition-colors">
          <Contact />
          <span >Contacto</span>
        </a>

        <a href="#nav" class="lg:hidden absolute top-6 right-6 hover:text-red-500 transition-colors">
          <Close />
        </a>
      </ul>

      <a href="#menu" class="block lg:hidden">
        <Menu />
      </a>
    </div>
  </div>
</nav>